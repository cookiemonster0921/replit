  <body>
    <h1></h1>
    <h1>favourite ice cream flavour</h1>
    <form method='post' action='/vote'>
      <input id='choc' type='radio' value='chocolate' name='fav'>
      <label for='choc'>chocolate</label>
      <input id='van'type='radio' name='fav'value='vanilla'>
      <label for='van'>vanilla</label>
      <input id='pea'type='radio' name='fav' value='peach'>
      <label for='pea'>peach</label>
      <input type='submit'>
    </form>
    <p></p>
    <canvas id="myChart" width="400" height="400" hidden></canvas>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js"></script>
<script>
const ctx = document.getElementById('myChart').getContext('2d');
const myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['chocolate', 'vanila', 'peach'],
        datasets: [{
            label: '# of Votes',
            data: [<%= ch %>, <%= va %>, <%= pe %>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>
  </body>
</html>